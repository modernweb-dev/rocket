<script type="module">
  import '@rocket/navigation/rocket-navigation.js';
  import '@rocket/drawer/rocket-drawer.js';
  const drawer = document.querySelector('#sidebar');

  // Toggle button
  const triggers = document.querySelectorAll('[data-action="trigger-mobile-menu"]');
